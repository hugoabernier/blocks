{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "wrap": true,
                    "spacing": "Medium",
                    "color": "Default",
                    "isSubtle": false,
                    "size": "Medium",
                    "weight": "Default",
                    "$data": "$quote",
                    "text": "\"${$root.quote}\""
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "wrap": true,
                                    "$data": "${$root.quoter}",
                                    "text": "${$root.quoter}",
                                    "size": "Large",
                                    "horizontalAlignment": "Right"
                                }
                            ],
                            "horizontalAlignment": "Left",
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "50px",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "data:image/png;base64,",
                                    "horizontalAlignment": "Right",
                                    "width": "50px",
                                    "height": "50px"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}